javascript:
  (function() {
    var force = false;
    var el = document.querySelector("#site-waring");
    var btn = el.querySelector("button");
    btn.addEventListener("click", dismissWarning);
    var links = el.querySelectorAll("a");
    Array.prototype.slice.call(links).forEach(function(link) {
      link.addEventListener("click", dismissWarning);
    });

    function showWarning() {
      el.style.display = "block"
    }

    function dismissWarning() {
      el.style.display = "none";
      localStorage.alertChecked = "1";
    }

    if(force || (localStorage && localStorage.alertChecked != "1")) { showWarning(); }
    window.dismissWarning = dismissWarning;
  })();

